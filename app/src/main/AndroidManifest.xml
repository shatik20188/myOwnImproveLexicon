<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.shati.myownimprovelexicon">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_well"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_well_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning"
        >

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AddNewWordActivity"
            android:label="@string/add_new_word"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ThemesActivity"
            android:label="@string/themes"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".EditWordActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".LearnActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>